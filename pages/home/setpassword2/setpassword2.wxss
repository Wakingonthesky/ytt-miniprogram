/* pages/home/setpassword2/setpassword2.wxss */
page {
  background-image: linear-gradient(to bottom, #a9e5ff, #ffffff, #ffffff);
}

.login {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 1170rpx;
}



.container {
  display: flex;
  width: 700rpx;
  height: 1000rpx;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.main {
  background-color: white;
  width: 700rpx;
  height: 900rpx;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main-font {
  font-size: 30rpx;
}

#log {
  font-size: 50rpx;
}

.index {
  display: flex;
  flex-direction: row;
}

.index1 {
  height: 100rpx;
  width: 200rpx;
  background-color: white;
  border-radius: 20rpx;
  position: relative;
  left: 0rpx;
  top: 19rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.index1 text {
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-size: 35rpx;
  color: #1d5e9a;
  font-weight: 700;
}

.index2 {
  width: 70rpx;
  height: 90rpx;
  /* 宽高 */
  background-color: white;
  /* 颜色 */
  border-radius: 0 15rpx 0 0;
  /* 设置圆角 */
  transform: perspective(19rpx)scale(1.1, 1.3) rotateX(5deg);
  transform-origin: bottom left;
  margin-top: -30rpx;
  position: relative;
  left: -34rpx;
  top: 40rpx
}

#phonecode {
  margin-top: 50rpx;
  margin-left: -550rpx;
}

.input {
  display: flex;
  flex-direction: column;
  align-self: center;
  width: 90%;
}

.loginbutton {
  width: 630rpx;
  line-height: 1.8;
  background-color: #92dfff;
}

.loginbutton[disabled] {
  color: white !important;
  background-color: #92dfff !important;
}


.t-input {
  height: 0rpx;
  border-radius: 30rpx;
  margin: 10rpx 0;
  box-shadow: 3rpx 3rpx #f8f8f8;
}

.t-radio {
  border-radius: 30rpx;
  margin: 10rpx 0 20rpx 0;
}

.verify {
  color: rgba(0, 82, 217, 1);
  font-size: 32rpx;
}

.inputset {

  height: 100rpx;
  display: flex;
  flex-direction: column;
}

.col {
  display: flex;
  flex-direction: row;
  gap: 280rpx;
  margin-top: 200rpx;
}